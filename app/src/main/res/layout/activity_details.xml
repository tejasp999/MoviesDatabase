<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.teja.midterm.DetailsActivity">
    <ImageView
        android:id="@+id/largeImageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="84dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/largeImageView"
        android:layout_marginTop="32dp"
        android:layout_toStartOf="@+id/largeImageView"
        android:text="Overview"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/overViewText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView3"
        android:layout_marginStart="21dp"
        android:layout_toEndOf="@+id/textView3"
        android:text="TextView"
        android:textSize="14sp"
        android:layout_above="@+id/releaseDateText" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="14dp"
        android:layout_toStartOf="@+id/overViewText"
        android:text="Release Date"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/releaseDateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/overViewText"
        android:layout_alignTop="@+id/textView5"
        android:text="TextView"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView5"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="15dp"
        android:text="Rating"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ratingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignStart="@+id/releaseDateText"
        android:layout_alignTop="@+id/textView7"
        android:autoLink="web"
        android:text="TextView"
        android:textSize="18sp"
        android:layout_alignEnd="@+id/releaseDateText" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/largeImageView"
        android:layout_marginTop="25dp"
        android:text="Title:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView12"
        android:layout_centerHorizontal="true"
        android:text="TextView"
        android:textSize="18sp" />

</RelativeLayout>
